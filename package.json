{
  "name": "Eviro",
  "version": "1.0.0",
  "description": "School Planner",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Skeewb",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.3.9",
    "pdfjs-dist": "^3.11.174",
    "peerjs": "^1.5.4",
    "react": "^18.2.0",
    "react-calendar": "^6.0.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "electron-build": "npm run react-build && electron-builder",
    "release": "npm run react-build && electron-builder --win --publish never",
    "build": "npm run electron-build",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.notestasks.app",
    "productName": "Eviro",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.example.com/eviro/win"
      }
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
